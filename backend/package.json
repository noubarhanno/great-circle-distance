{
  "name": "backend",
  "version": "1.0.0",
  "description": "microservice to get nearby list of users in a given location and range",
  "main": "dist/index.js",
  "author": "Noubar Jack Hanno",
  "license": "MIT",
  "scripts": {
    "postinstall": "tsc",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon --ignore dist/*.json -q dist/index.js\""
  },
  "nodemanConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lowdb": "github:dankreiger/lowdb#chore/esm-cjs-hybrid-WITH-LIB",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/lowdb": "^1.0.11",
    "@types/node": "^18.8.3",
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
